{
    "env": {
      "node": true,
      "es2021": true,
      "mocha": true
    },
    "extends": [
      "airbnb-base"
    ],
    "parserOptions": {
      "ecmaVersion": 12
    },
    "rules": {
      "indent": ["error", "tab"],
      "no-tabs": "off",
      "linebreak-style": ["error", "unix"],
      "quotes": ["error", "single"],
      "semi": ["error", "always"],
      "no-console": "off",
      "no-unused-vars": ["error", { "argsIgnorePattern": "next" }]
    }
  }